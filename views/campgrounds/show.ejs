<%- include('../partials/header')-%>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Be$t_De@l</p>
			<div class="list-group">
				<li class="list-group-item active" id="list1" onclick="
				document.getElementById('list1').classList.toggle('active');
				document.getElementById('list2').classList.toggle('active');
				document.getElementById('price1').classList.toggle('show');
				document.getElementById('price2').classList.toggle('show');
				document.getElementById('image1').classList.toggle('show');
				document.getElementById('image2').classList.toggle('show');
				">Normal Room</li>
				<li class="list-group-item" id="list2" onclick="
				document.getElementById('list1').classList.toggle('active');
				document.getElementById('list2').classList.toggle('active');
				document.getElementById('price1').classList.toggle('show');
				document.getElementById('price2').classList.toggle('show');
				document.getElementById('image1').classList.toggle('show');
				document.getElementById('image2').classList.toggle('show');
				">Deluxe Room</li>
			</div>		
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<div class="image show" id="image1">
					<img class="img-responsive  " src="<%= campground.rooms.normalRoom.picture %>">
				</div>
				<div class="image" id="image2">
					<img class="img-responsive  " src="<%= campground.rooms.deluxeRoom.picture %>">
				</div>
				<div class="caption-full">
					<h4 class="pull-right price show" id="price1">$<%= campground.rooms.normalRoom.price%>/night</h4>
					<h4 class="pull-right price" id="price2">$<%= campground.rooms.deluxeRoom.price%>/night</h4>
					<h4><a><%=campground.name %></a></h4>
					<p><%= campground.description %></p>
					<p>
						<em>Submitted By <%= campground.author.username %></em>
					</p>
					<% if(currentUser && campground.author.id === currentUser._id) { %>
					<a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
					<form id="delete-form" action ="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
						<button class="btn btn-xs btn-danger">Delete</button>
					</form>
				<%	}%>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
				</div>	
				<hr>
				<%campground.comments.forEach(function(comment){%>
				<div class="row">
					<div class="col-md-12" style="font-size: 1.2em;">
						<strong><%= comment.author.username %></strong>
						<span class="pull-right">10 days ago</span>
						<p>
					        <%= comment.text %>
							<% for(var i = 0; i < comment.rating; i++) { %>
								<span class="glyphicon glyphicon-star" style="color: #ffd700;" aria-hidden="true"></span>
							<% } %>
							<% for(var i = 0; i < 5-comment.rating; i++) { %>
								<span class="glyphicon glyphicon-star-empty" style="color: #ffd700;" aria-hidden="true"></span>
							<% } %>
					    </p>
					    <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
							<a class="btn btn-xs btn-warning" 
								href="/campgrounds/<%=campground._id%>/comments/<%= comment._id %>/edit">
							Edit
							</a>
							<form id="delete-form" action="/campgrounds/<%=campground._id%>/comments/<%= comment._id %>?_method=DELETE" method="POST">
								<input type="submit" class="btn btn-xs btn-danger" value="Delete">
							</form>
						<%  } %>  
					</div>
				</div	
				<% }) %>
			</div>
		</div>
	</div>
</div>


